/* Pixel to rem */
rem(px)
  return unit(px / REM_BASE, 'rem')

/* Screen */
lesserThan(device)
  condition = '(max-width: %s)' % device
  @media condition
    { block }

animateGradient(startColor, endColor, speed = 6, deg =  270)
  animation: AnimationName unit(speed, 's') ease infinite
  background: linear-gradient(unit(270, 'deg'), lightGrey, alabasterWhite)
  background-size: 400% 400%
  @keyframes AnimationName
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}

